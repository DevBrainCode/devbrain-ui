{
    "name": "Media",
    "description": "Documentation et exemples pour le composant média de type <code>images</code>, <code>audio</code>, <code>video</code>",
    "type": "component",
    "status": "✅",
    "twig": {
        "source": "media/main.twig",
        "examples": [
            {
                "name": "Media Image",
                "description": "",
