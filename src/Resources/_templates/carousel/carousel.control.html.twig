{# ------------ DevBrain Component : Carousel Control - Settings ------------ #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _types   = ['prev','next'] %}

{# Public properties #}
{% set _class   = class|default('') %}
{% set _id      = id|default('') %}
{% set _type    = control|default('') %}
{% set _label   = label|default('') %}



{# -------------- DevBrain Component : Carousel Control - Attr -------------- #}
{# -------------------------------------------------------------------------- #}

{# Default referrer policy #}
{% if _type not in _types %}
{% set _type = 'prev' %}
{% endif %}


{# ------------ DevBrain Component : Carousel Control - Content ------------- #}
{# -------------------------------------------------------------------------- #}

{% if _type == 'prev' %}
{% db_component 'carousel.prev' with {
    class: _class,
    id   : _id,
    label: _label,
} %}
{% else %}
{% db_component 'carousel.next' with {
    class: _class,
    id   : _id,
    label: _label,
} %}
{% endif %}