{# --------------- DevBrain Component : Map Iframe - Settings --------------- #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _attr         = attr|default({}) %}

{# Public properties #}
{% set _reference    = reference|default('') %}


{# ----------------- DevBrain Component : Map Iframe - Attr ----------------- #}
{# -------------------------------------------------------------------------- #}

{# Map Source #}
{% set _attr = _add_attribute(_attr, 'src', _reference) %}

{# Button type #}
{# {% set _attr = _add_attribute(_attr, 'type', _type) %} #}

{# DataSet #}
{# {% for _property, _value in _dataset %}
{% set _attr = _add_attribute(_attr, 'data-'~ _property, _value) %}
{% endfor %} #}

{# Has event handler #}
{# {% if _eventHandler %}
{% set _attr = _eventHandler is same as true ? _add_attribute(_attr, 'rel', "js-button") : _add_attribute(_attr, 'rel', "js-"~ _eventHandler) %}
{% endif %} #}

{# Add custom class #}


{# --------------- DevBrain Component : Map Iframe - Content ---------------- #}
{# -------------------------------------------------------------------------- #}
<iframe {{ _get_attributes(_attr) }} allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>



