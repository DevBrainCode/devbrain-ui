{# ------------------ DevBrain Component : Alert - Settings ----------------- #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _attr    = attr|default({}) %}
{% set _attr    = _attr|merge({class: ''}) %}
{% set _attr    = _add_attribute(_attr, 'class', _attr.class ~' alert') %}

{# Public properties #}
{% set _class   = class|default('') %}



{# ------------------- DevBrain Component : Alert - Attr -------------------- #}
{# -------------------------------------------------------------------------- #}

{# Add custom class #}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}



{# ------------------ DevBrain Component : Alert - Content ------------------ #}
{# -------------------------------------------------------------------------- #}
<div {{ _get_attributes(_attr) }}>
    Alert
</div>