{# ----------------- DevBrain Component : Avatar - Settings ----------------- #}
{# -------------------------------------------------------------------------- #}

{% set _class = class|default('') %}



{# ------------------- DevBrain Component : avatar - Attr ------------------- #}
{# -------------------------------------------------------------------------- #}

{% set _attr = attr|default({}) %}

{# Class Attribute #}
{% set _attr = _attr|merge({class: ''}) %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' avatar') %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}



{# ----------------- DevBrain Component : Avatar - Content ------------------ #}
{# -------------------------------------------------------------------------- #}
<div {{ get_attributes(_attr) }}>
    Avatar
</div>