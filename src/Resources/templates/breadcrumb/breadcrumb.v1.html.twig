{# --------------- DevBrain Component : Breadcrumb - Settings --------------- #}
{# -------------------------------------------------------------------------- #}

{% set _class = class|default('') %}



{# ----------------- DevBrain Component : Breadcrumb - Attr ----------------- #}
{# -------------------------------------------------------------------------- #}

{% set _attr = attr|default({}) %}

{# Class Attribute #}
{% set _attr = _attr|merge({class: ''}) %}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' breadcrumb') %}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}



{# ---------------- DevBrain Component : Breadcrumb - Content --------------- #}
{# -------------------------------------------------------------------------- #}
<div {{ _get_attributes(_attr) }}>
    Breadcrumb
</div>