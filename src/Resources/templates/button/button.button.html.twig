{# ------------- DevBrain Component : Button Button - Settings -------------- #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _type         = 'button' %}
{% set _class_btn    = 'button-button' %}

{# Public properties #}
{% set _class        = class|default('') %}
{% set _label        = label|default('') %}
{% set _disabled     = disabled|default('no') %}
{% set _eventHandler = eventHandler|default('') %}
{% set _dataset      = dataset|default({}) %}


{# --------------- DevBrain Component : Button Button - Attr ---------------- #}
{# -------------------------------------------------------------------------- #}

{# Button Class #}
{% set _class = _class_btn ~ ' ' ~ _class %}


{# -------------- DevBrain Component : Button Button - Content -------------- #}
{# -------------------------------------------------------------------------- #}
{% component 'button' part 'button' with {
    class       : _class,
    label       : _label,
    type        : _type,
    disabled    : _disabled,
    dataset     : _dataset,
    eventHandler: _eventHandler,
} %}