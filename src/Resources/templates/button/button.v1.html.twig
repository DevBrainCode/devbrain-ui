{# ----------------- DevBrain Component : Button - Settings ----------------- #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _types       = ['button','submit','reset','link'] %}

{# Public properties #}
{% set _class        = class|default('') %}
{% set _label        = label|default('') %}
{% set _disabled     = disabled|default('no') %}
{% set _eventHandler = eventHandler|default(false) %}
{% set _dataset      = dataset|default({}) %}

{# Button properties #}
{% set _type         = type|default('') %}

{# Link properties #}
{% set _role         = role|default('button') %}
{% set _url          = url|default('') %}
{% set _target       = target|default('_self') %}



{# ------------------- DevBrain Component : Button - Attr ------------------- #}
{# -------------------------------------------------------------------------- #}

{# Default referrer policy #}
{% if _type not in _types %}
{% set _type = 'button' %}
{% endif %}


{# ----------------- DevBrain Component : Button - Content ------------------ #}
{# -------------------------------------------------------------------------- #}
{% if _type == 'button' %}
{% component 'button.button' with {
    class       : _class,
    label       : _label,
    disabled    : _disabled,
    dataset     : _dataset,
    eventHandler: _eventHandler,
} %}
{% elseif _type == 'submit' %}
{% component 'button.submit' with {
    class       : _class,
    label       : _label,
    disabled    : _disabled,
    dataset     : _dataset,
    eventHandler: _eventHandler,
} %}
{% elseif _type == 'reset' %}
{% component 'button.reset' with {
    class       : _class,
    label       : _label,
    disabled    : _disabled,
    dataset     : _dataset,
    eventHandler: _eventHandler,
} %}
{% elseif _type == 'link' %}
{% component 'button.link' with {
    class       : _class,
    label       : _label,
    role        : _role,
    disabled    : _disabled,
    dataset     : _dataset,
    eventHandler: _eventHandler,
    url         : _url,
    target      : _target,
} %}
{% endif %}
