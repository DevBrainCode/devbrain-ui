{# -------------- DevBrain Component : Button Link - Settings --------------- #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _attr         = attr|default({}) %}
{% set _attr         = _attr|merge({class: ''}) %}
{% set _attr         = _add_attribute(_attr, 'class', _attr.class ~' button') %}

{# Public properties #}
{% set _class        = class|default('') %}
{% set _label        = label|default('') %}
{% set _url          = url|default('') %}
{% set _target       = target|default('_self') %}
{% set _role         = role|default('button') %}
{% set _disabled     = disabled|default('no') %}
{% set _eventHandler = eventHandler|default('js-button') %}
{% set _dataset      = dataset|default({}) %}



{# ---------------- DevBrain Component : Button Link - Attr ----------------- #}
{# -------------------------------------------------------------------------- #}

{# Add custom class #}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}

{# DataSet #}
{% for _property, _value in _dataset %}
{% set _attr = _add_attribute(_attr, 'data-'~ _property, _value) %}
{% endfor %}

{# Has event handler #}
{% set _attr = _add_attribute(_attr, 'rel', _eventHandler) %}

{% if _disabled != 'yes' %}
{% set _attr = _add_attribute(_attr, 'href', _url) %}
{% set _attr = _add_attribute(_attr, 'target', _target) %}
{% endif %}

{# Button role #}
{% set _attr = _add_attribute(_attr, 'role', _role) %}


{# --------------- DevBrain Component : Button Link - Content --------------- #}
{# -------------------------------------------------------------------------- #}
<a {{ _get_attributes(_attr) }}>{{ _label|raw }}</a>