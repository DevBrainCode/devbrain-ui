{# --------------- DevBrain Component : Card Footer - Settings -------------- #}
{# -------------------------------------------------------------------------- #}

{% set _class = class|default('') %}
{% set _content = content|default('') %}


{# ----------------- DevBrain Component : Card Footer - Attr ---------------- #}
{# -------------------------------------------------------------------------- #}

{% set _attr = attr|default({}) %}

{# Class Attribute #}
{% set _attr = _attr|merge({class: ''}) %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' card-footer') %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}


{# --------------- DevBrain Component : Card Footer - Content --------------- #}
{# -------------------------------------------------------------------------- #}
<footer {{ get_attributes(_attr) }}>
    {{ _content|raw }}
</footer>