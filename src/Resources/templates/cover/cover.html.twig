{# ------------------ DevBrain Component : Cover - Settings ----------------- #}
{# -------------------------------------------------------------------------- #}

{% set _class = class|default('') %}



{# ------------------- DevBrain Component : Cover - Attr -------------------- #}
{# -------------------------------------------------------------------------- #}

{% set _attr = attr|default({}) %}

{# Class Attribute #}
{% set _attr = _attr|merge({class: ''}) %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' cover') %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}



{# ------------------ DevBrain Component : Cover - Content ------------------ #}
{# -------------------------------------------------------------------------- #}
<div {{ get_attributes(_attr) }}>
    Cover
</div>