{# ----------------- DevBrain Component : Media - Settings ------------------ #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _preloader   = ['auto', 'metadata', 'none'] %}
{% set _attr        = attr|default({}) %}
{% set _attr        = _attr|merge({class: ''}) %}
{% set _attr        = _add_attribute(_attr, 'class', _attr.class ~' media media-audio') %}

{# Public properties #}
{% set _class       = class|default('') %}
{% set _type        = type|default('image') %}
{% set _legend      = legend|default('') %}
{% set _source      = source|default([]) %}
{% set _inline      = inline|default(false) %}
{% set _controls    = controls|default(false) %}
{% set _autoplay    = autoplay|default(false) %}
{% set _loop        = loop|default(false) %}
{% set _muted       = muted|default(false) %}
{% set _preload     = preload|default('') %}
{% set _placeholder = placeholder|default('Your browser does not support the audio element.') %}


{# ------------------- DevBrain Component : Media - Attr -------------------- #}
{# -------------------------------------------------------------------------- #}


{# Inline media #}
{% if _inline is same as true %}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' media-inline') %}
{% endif %}

{# Controls attribute #}
{% if _controls is same as true %}
{% set _attr = _add_attribute(_attr, 'controls', 'controls') %}
{% endif %}

{# Autoplay attribute #}
{% if _autoplay is same as true %}
{% set _attr = _add_attribute(_attr, 'autoplay', 'autoplay') %}
{% endif %}

{# Loop attribute #}
{% if _loop is same as true %}
{% set _attr = _add_attribute(_attr, 'loop', 'loop') %}
{% endif %}

{# Muted attribute #}
{% if _muted is same as true %}
{% set _attr = _add_attribute(_attr, 'muted', 'muted') %}
{% endif %}

{# Muted preload #}
{% if _preload not in _preloader %}
{% set _preload = 'metadata' %}
{% endif %}
{% set _attr = _add_attribute(_attr, 'preload', _preload) %}


{# Add custom class #}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}



{# ------------------ DevBrain Component : Media - Content ------------------ #}
{# -------------------------------------------------------------------------- #}
<audio {{ _get_attributes(_attr) }}>    
    
    {{ _placeholder|raw }}
</audio>
