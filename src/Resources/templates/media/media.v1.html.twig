{# ----------------- DevBrain Component : Media - Settings ------------------ #}
{# -------------------------------------------------------------------------- #}

{# Private properties #}
{% set _attr           = attr|default({}) %}
{% set _attr           = _attr|merge({class: ''}) %}

{# Public properties #}
{% set _class          = class|default('') %}
{% set _type           = type|default('image') %}
{% set _legend         = legend|default('') %}
{% set _source         = source|default([]) %}
{% set _inline         = inline|default(false) %}

{# Images properties #}
{% set _alt            = alt|default('') %}
{% set _referrerpolicy = referrerpolicy|default('') %}
{% set _lazy           = lazy|default('yes') %}
{% set _sizes          = sizes|default([]) %}

{# Audio & Video properties #}
{% set _controls       = controls|default(false) %}
{% set _autoplay       = autoplay|default(false) %}
{% set _loop           = loop|default(false) %}
{% set _muted          = muted|default(false) %}
{% set _preload        = preload|default('') %}
{% set _placeholder    = placeholder|default('') %}

{# Video properties #}
{% set _poster         = poster|default('') %}


{# ------------------- DevBrain Component : Media - Attr -------------------- #}
{# -------------------------------------------------------------------------- #}



{# ------------------ DevBrain Component : Media - Content ------------------ #}
{# -------------------------------------------------------------------------- #}

{% if _type == 'image' %}
{% component 'media.image' with {
    class         : _class,
    legend        : _legend,
    source        : _source,
    sizes         : _sizes,
    inline        : _inline,
    alt           : _alt,
    lazy          : _lazy,
    referrerpolicy: _referrerpolicy,
} %}
{% elseif _type == 'audio' %}
{% component 'media.audio' with {
    class         : _class,
    legend        : _legend,
    source        : _source,
    inline        : _inline,
    controls      : _controls,
    autoplay      : _autoplay,
    loop          : _loop,
    muted         : _muted,
    preload       : _preload,
} %}
{% elseif _type == 'video' %}
{% component 'media.video' with {
    class         : _class,
    legend        : _legend,
    source        : _source,
    inline        : _inline,
    controls      : _controls,
    autoplay      : _autoplay,
    loop          : _loop,
    muted         : _muted,
    preload       : _preload,
    poster        : _poster,
} %}
{% endif %}