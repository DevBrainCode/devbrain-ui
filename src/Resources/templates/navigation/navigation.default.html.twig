{# --------------- DevBrain Component : Navigation - Settings --------------- #}
{# -------------------------------------------------------------------------- #}

{% set _class = class|default('') %}
{% set _container = container|default('') %}
{% set _type = type|default('') %}
{% set _expandAt = expandAt|default('') %}
{% set _schema = schema|default({}) %}







{# {% set _brand = brand|default({}) %} #}



{# ----------------- DevBrain Component : Navigation - Attr ----------------- #}
{# -------------------------------------------------------------------------- #}

{% set _attr = attr|default({}) %}

{# Class Attribute #}
{% set _attr = _attr|merge({class: ''}) %}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' navigation') %}

{# Add custom class #}
{% set _attr = _add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}

{# Container #}
{% set _container = _container is empty ? 'container' : 'container-' ~ _container %}






{# ---------------- DevBrain Component : Navigation - Content --------------- #}
{# -------------------------------------------------------------------------- #}
<nav {{ _get_attributes(_attr) }}>
    <div class="{{ _container }}">
    {% for _node in _schema %}
        
        {{ dump(_node) }}

    {% endfor %}




        {# Brand Component #}
        {# {% if _brand is not empty %}
        {% component 'brand' with _brand %}
        {% endif %} #}

        <button class="navigation-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navigation-collapse" id="navbarSupportedContent">
            <ul class="menu m-auto">
                <li class="menu-item"><a class="menu-link active" aria-current="page" href="#">Home</a></li>
                <li class="menu-item"><a class="menu-link" href="#">Link</a></li>
                <li class="menu-item"><a class="menu-link disabled" aria-disabled="true">Disabled</a></li>
