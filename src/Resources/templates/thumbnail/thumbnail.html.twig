{# ---------------- DevBrain Component : Thumbnail - Settings --------------- #}
{# -------------------------------------------------------------------------- #}

{% set _class = class|default('') %}



{# ----------------- DevBrain Component : Thumbnail - Attr ------------------ #}
{# -------------------------------------------------------------------------- #}

{% set _attr = attr|default({}) %}

{# Class Attribute #}
{% set _attr = _attr|merge({class: ''}) %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' thumbnail') %}
{% set _attr = add_attribute(_attr, 'class', _attr.class ~' ' ~ _class) %}



{# ---------------- DevBrain Component : Thumbnail - Content ---------------- #}
{# -------------------------------------------------------------------------- #}
<div {{ get_attributes(_attr) }}>
    Thumbnail
</div>